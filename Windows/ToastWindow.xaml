<Window x:Class="HackHelper.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toast" 
        Height="90" 
        Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Window.Resources>
        <!--========  GLOBAL FONT  ========-->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <!--================================-->
    </Window.Resources>

    <!-- REMOVED colored border, kept clean background with shadow -->
    <Border Background="{DynamicResource SurfaceBrush}" 
            CornerRadius="8"
            Padding="15">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="3" 
                              BlurRadius="10" 
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Row: Icon + Message + Close -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock x:Name="IconText" 
                           Grid.Column="0"
                           FontSize="24" 
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- Message -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="MessageText" 
                               FontSize="12" 
                               Foreground="{DynamicResource SubTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="CloseButton"
                        Grid.Column="2"
                        Content="✕"
                        Width="20"
                        Height="20"
                        FontSize="12"
                        Background="Transparent"
                        Foreground="{DynamicResource SubTextBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Progress Bar (Optional) -->
            <ProgressBar x:Name="ProgressBar"
                         Grid.Row="1"
                         Height="4"
                         Margin="0,8,0,0"
                         Background="{DynamicResource BorderBrush}"
                         Foreground="{DynamicResource PrimaryBrush}"
                         BorderThickness="0"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Visibility="Collapsed"/>
        </Grid>
    </Border>
</Window>