<Window x:Class="HackHelper.ThemeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Editor" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!--========  GLOBAL FONT  ========-->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <!--================================-->

        <!-- Scrollbar Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{DynamicResource PrimaryBrush}" 
                                CornerRadius="6"
                                Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Margin="2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton 
                                Name="ToggleButton" 
                                Grid.Column="2"
                                Focusable="False"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border 
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="20" />
                                                            </Grid.ColumnDefinitions>
                                                            <Path 
                                                                Grid.Column="1"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                                Fill="{DynamicResource SubTextBrush}" />
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter 
                                Name="ContentSite"
                                IsHitTestVisible="False" 
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="10,3,23,3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup 
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True" 
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid 
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                        x:Name="DropDownBorder"
                                        Background="{DynamicResource SurfaceBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        CornerRadius="6"
                                        Margin="0,2,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border 
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}"
                            Margin="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}"/>

        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
        </Style>

        <Style x:Key="DangerSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- REMOVED colored border, kept clean background -->
    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Animated Gradient Text -->
            <Border Grid.Row="0" 
                    Background="#0F0F12" 
                    CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <!-- Stylized Title Text with Gradient Animation -->
                    <TextBlock Text="THEME EDITOR"
                               FontFamily="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0">
                        <TextBlock.Foreground>
                            <LinearGradientBrush x:Name="TitleGradient"
                                                 StartPoint="0,0"
                                                 EndPoint="1,0"
                                                 SpreadMethod="Repeat">
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>

                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="GradientTranslate" X="0"/>
                                        <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>

                        <TextBlock.Effect>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.8"/>
                        </TextBlock.Effect>

                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="GradientTranslate"
                                            Storyboard.TargetProperty="X"
                                            From="0"
                                            To="1"
                                            Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- Window Control Button -->
                    <Button Style="{StaticResource CloseButton}" 
                            Click="CloseButton_Click" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,10,0">
                        <TextBlock Text="🗙" FontSize="16" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Theme Selection & Colors -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Default Themes Section -->
                        <Border Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Default Themes" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           Margin="0,0,0,15"/>

                                <ComboBox x:Name="DefaultThemeComboBox"
                                          SelectionChanged="DefaultThemeComboBox_SelectionChanged"
                                          Background="{DynamicResource BackgroundBrush}"
                                          Foreground="{DynamicResource TextBrush}"
                                          BorderBrush="{DynamicResource BorderBrush}"
                                          Padding="10,8"
                                          FontSize="13"/>

                                <Button Content="Apply Default Theme" 
                                        Click="ApplyDefaultTheme_Click" 
                                        Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Custom Theme Slots Section -->
                        <Border Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Custom Theme Slots" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           Margin="0,0,0,15"/>

                                <ComboBox x:Name="CustomThemeComboBox"
                                          SelectionChanged="CustomThemeComboBox_SelectionChanged"
                                          Background="{DynamicResource BackgroundBrush}"
                                          Foreground="{DynamicResource TextBrush}"
                                          BorderBrush="{DynamicResource BorderBrush}"
                                          Padding="10,8"
                                          FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <!-- Color Customization Section -->
                        <Border Background="{DynamicResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Customize Colors" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           Margin="0,0,0,15"/>

                                <TextBox x:Name="ThemeNameTextBox"
                                         Background="{DynamicResource BackgroundBrush}"
                                         Foreground="{DynamicResource TextBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         BorderThickness="1"
                                         Padding="10,8"
                                         FontSize="13"
                                         Margin="0,0,0,15"
                                         Text="My Custom Theme"/>

                                <!-- Primary Color -->
                                <TextBlock Text="Primary Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="PrimaryColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="PrimaryColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Primary"/>
                                </Grid>

                                <!-- Secondary Color -->
                                <TextBlock Text="Secondary Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SecondaryColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="SecondaryColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Secondary"/>
                                </Grid>

                                <!-- Background Color -->
                                <TextBlock Text="Background Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="BackgroundColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="BackgroundColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Background"/>
                                </Grid>

                                <!-- Surface Color -->
                                <TextBlock Text="Surface Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SurfaceColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="SurfaceColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Surface"/>
                                </Grid>

                                <!-- Border Color -->
                                <TextBlock Text="Border Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="BorderColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="BorderColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Border"/>
                                </Grid>

                                <!-- Text Color -->
                                <TextBlock Text="Text Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TextColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="TextColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="Text"/>
                                </Grid>

                                <!-- SubText Color -->
                                <TextBlock Text="SubText Color" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           FontSize="12" 
                                           Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SubTextColorTextBox"
                                             Grid.Column="0"
                                             Background="{DynamicResource BackgroundBrush}"
                                             Foreground="{DynamicResource TextBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             FontSize="13"
                                             TextChanged="ColorTextBox_TextChanged"/>
                                    <Border Grid.Column="2" 
                                            x:Name="SubTextColorPreview"
                                            CornerRadius="4" 
                                            BorderThickness="1" 
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorPreview_Click"
                                            Tag="SubText"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right Panel - Live Preview & Actions -->
                <Border Grid.Column="2" 
                        Background="{DynamicResource SurfaceBrush}" 
                        CornerRadius="8" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Live Preview" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}" 
                                   Margin="0,0,0,15"/>

                        <!-- Preview Card -->
                        <Border x:Name="PreviewCard"
                                Background="{DynamicResource BackgroundBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Sample Loader" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="C:\Path\To\Loader.exe" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource SubTextBrush}" 
                                           Margin="0,0,0,10"/>
                                <Button Content="▶ Launch" 
                                        Padding="12,8" 
                                        HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <Button Content="📂 Load" 
                                Style="{StaticResource SidebarButton}" 
                                Click="LoadCustomTheme_Click"/>

                        <Button Content="👁 Preview" 
                                Style="{StaticResource SidebarButton}" 
                                Click="PreviewTheme_Click"/>

                        <Button Content="💾 Save" 
                                Style="{StaticResource SidebarButton}" 
                                Click="SaveToSlot_Click"/>

                        <Button Content="🗑 Delete" 
                                Style="{StaticResource DangerSidebarButton}" 
                                Click="DeleteCustomTheme_Click"/>

                        <TextBlock Text="Config" 
                                   Foreground="{DynamicResource SubTextBrush}" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>

                        <Button Content="⬆️ Import" 
                                Style="{StaticResource SidebarButton}" 
                                Click="ImportTheme_Click"/>

                        <Button Content="⬇️ Export" 
                                Style="{StaticResource SidebarButton}" 
                                Click="ExportTheme_Click"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Actions -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="0,0,12,12" 
                    Padding="20,15">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Reset to Default" 
                                Click="ResetToDefault_Click" 
                                Style="{StaticResource DangerButton}"
                                Padding="15,10"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
