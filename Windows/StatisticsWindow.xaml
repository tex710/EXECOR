<Window x:Class="HackHelper.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!--========  GLOBAL FONT  ========-->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <!--================================-->

        <!-- Scrollbar Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{DynamicResource PrimaryBrush}" 
                                CornerRadius="6"
                                Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Margin="2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Buttons -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Stat Value Style -->
        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource SubTextBrush}"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>

    <!-- REMOVED colored border, kept clean background -->
    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Animated Gradient Text -->
            <Border Grid.Row="0" Background="#0F0F12" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <!-- Stylized Title Text with Gradient Animation -->
                    <TextBlock Text="STATISTICS"
                               FontFamily="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0">
                        <TextBlock.Foreground>
                            <LinearGradientBrush x:Name="TitleGradient"
                                                 StartPoint="0,0"
                                                 EndPoint="1,0"
                                                 SpreadMethod="Repeat">
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>

                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="GradientTranslate" X="0"/>
                                        <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>

                        <TextBlock.Effect>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.8"/>
                        </TextBlock.Effect>

                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="GradientTranslate"
                                            Storyboard.TargetProperty="X"
                                            From="0"
                                            To="1"
                                            Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- Window Control Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                            <TextBlock Text="🗙" FontSize="16" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Statistics Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>

                    <!-- Overview Cards -->
                    <TextBlock Text="Overview" Style="{StaticResource SectionTitle}" Margin="0,0,0,15"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Launches Card -->
                        <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="🚀" FontSize="24" Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalLaunchesText" Style="{StaticResource StatValue}"/>
                                <TextBlock Text="Total Launches" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Loaders Card -->
                        <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="24" Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalLoadersText" Style="{StaticResource StatValue}"/>
                                <TextBlock Text="Total Loaders" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>

                        <!-- Most Used Game Card -->
                        <Border Grid.Column="2" Style="{StaticResource StatCard}">
                            <StackPanel>
                                <TextBlock Text="🎮" FontSize="24" Margin="0,0,0,10"/>
                                <TextBlock x:Name="MostUsedGameText" Style="{StaticResource StatValue}" FontSize="24"/>
                                <TextBlock Text="Most Used Catagory" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Top 5 Loaders -->
                    <TextBlock Text="Top 5 Most Used Loaders" Style="{StaticResource SectionTitle}" Margin="0,10,0,15"/>
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15"
                            Margin="0,0,0,20">
                        <ItemsControl x:Name="TopLoadersListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" Padding="10,8" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Rank Badge -->
                                            <Border Grid.Column="0" 
                                                    Width="30" 
                                                    Height="30" 
                                                    CornerRadius="15" 
                                                    Background="{DynamicResource PrimaryBrush}"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Rank}" 
                                                           FontSize="14" 
                                                           FontWeight="Bold" 
                                                           Foreground="White"
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Loader Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding GameType}" 
                                                           FontSize="11" 
                                                           Foreground="{DynamicResource SubTextBrush}"/>
                                            </StackPanel>

                                            <!-- Launch Count -->
                                            <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="🚀 " 
                                                           FontSize="16" 
                                                           Foreground="{DynamicResource SubTextBrush}"/>
                                                <TextBlock Text="{Binding LaunchCount}" 
                                                           FontSize="18" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource PrimaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <!-- Game Distribution -->
                    <TextBlock Text="Game Distribution" Style="{StaticResource SectionTitle}" Margin="0,10,0,15"/>
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20"
                            Margin="0,0,0,20"
                            Width="840">
                        <ItemsControl x:Name="GameDistributionListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="600"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Game Name -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding GameType}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextBrush}"
                                                   VerticalAlignment="Center"/>

                                        <!-- Progress Bar -->
                                        <Border Grid.Column="1" 
                                                Height="20" 
                                                Background="{DynamicResource BorderBrush}" 
                                                CornerRadius="10"
                                                Margin="10,0,10,0">
                                            <Border HorizontalAlignment="Left" 
                                                    Width="{Binding BarWidthFull}" 
                                                    Background="{DynamicResource PrimaryBrush}" 
                                                    CornerRadius="10"/>
                                        </Border>

                                        <!-- Percentage -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding PercentageText}" 
                                                   FontSize="14" 
                                                   FontWeight="Bold" 
                                                   Foreground="{DynamicResource PrimaryBrush}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <!-- Recent Activity -->
                    <TextBlock Text="Recent Activity" Style="{StaticResource SectionTitle}" Margin="0,10,0,15"/>
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="15">
                        <ItemsControl x:Name="RecentActivityListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" 
                                            BorderBrush="{DynamicResource BorderBrush}" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="10,12"
                                            Margin="0,0,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding LauncherName}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding GameType}" 
                                                           FontSize="11" 
                                                           Foreground="{DynamicResource SubTextBrush}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TimeAgo}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource SubTextBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>