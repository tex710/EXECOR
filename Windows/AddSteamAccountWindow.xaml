<Window x:Class="HackHelper.AddSteamAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Steam Account" 
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!--========  GLOBAL FONT  ========-->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <!--================================-->

        <!-- Window Control Buttons -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
        </Style>

        <!-- TextBox Border Wrapper Style -->
        <Style x:Key="TextBoxBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- PasswordBox Style -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="PasswordChar" Value="●"/>
        </Style>

        <!-- PasswordBox Border Wrapper Style -->
        <Style x:Key="PasswordBoxBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Generate Button Style -->
        <Style x:Key="GenerateButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- REMOVED colored border, kept clean background -->
    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Animated Gradient Text -->
            <Border Grid.Row="0" Background="#0F0F12" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <!-- Stylized Title Text with Gradient Animation -->
                    <TextBlock x:Name="TitleTextBlock"
                               Text="ADD ACCOUNT"
                               FontFamily="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0">
                        <TextBlock.Foreground>
                            <LinearGradientBrush x:Name="TitleGradient"
                                                 StartPoint="0,0"
                                                 EndPoint="1,0"
                                                 SpreadMethod="Repeat">
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>

                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="GradientTranslate" X="0"/>
                                        <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>

                        <TextBlock.Effect>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.8"/>
                        </TextBlock.Effect>

                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="GradientTranslate"
                                            Storyboard.TargetProperty="X"
                                            From="0"
                                            To="1"
                                            Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <!-- Window Control Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                            <TextBlock Text="🗙" FontSize="16" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <DockPanel Grid.Row="1" LastChildFill="True">
                <!-- Buttons at bottom -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
                    <Button x:Name="AddAccountButton"
                            Content="➕ Add Account"
                            Click="AddAccountButton_Click"
                            Margin="0,0,10,0"
                            Width="150"/>
                    <Button Content="Cancel" Click="CancelButton_Click" Style="{StaticResource CancelButton}" Width="100"/>
                </StackPanel>

                <!-- Content area -->
                <StackPanel Margin="20">
                    <!-- Account Name -->
                    <Label Content="Account Name:"/>
                    <Border Style="{StaticResource TextBoxBorder}" Margin="0,0,0,15">
                        <TextBox x:Name="AccountNameTextBox"/>
                    </Border>

                    <!-- Username -->
                    <Label Content="Steam Username:"/>
                    <Border Style="{StaticResource TextBoxBorder}" Margin="0,0,0,15">
                        <TextBox x:Name="UsernameTextBox"/>
                    </Border>

                    <!-- Steam ID -->
                    <Label Content="Steam ID (Optional):"/>
                    <Border Style="{StaticResource TextBoxBorder}" Margin="0,0,0,15">
                        <TextBox x:Name="SteamIdTextBox"/>
                    </Border>

                    <!-- Password -->
                    <Label Content="Password (Optional):"/>
                    <Border x:Name="PasswordBoxBorder" Style="{StaticResource PasswordBoxBorder}" Margin="0,0,0,8">
                        <PasswordBox x:Name="PasswordBox" 
                                     PasswordChar="●"
                                     SelectionBrush="{DynamicResource PrimaryBrush}"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                    </Border>
                    <Border x:Name="PasswordTextBoxBorder" Style="{StaticResource TextBoxBorder}" Margin="0,0,0,8" Visibility="Collapsed">
                        <TextBox x:Name="PasswordTextBox"
                                 TextChanged="PasswordTextBox_TextChanged"/>
                    </Border>

                    <!-- Password Strength Indicator -->
                    <StackPanel Margin="0,0,0,15">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Password Strength" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource SubTextBrush}"
                                       Grid.Column="0"/>
                            <TextBlock x:Name="StrengthText"
                                       Text="No Password" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource SubTextBrush}"
                                       Grid.Column="1"/>
                        </Grid>
                        <Border Height="8" 
                                Background="{DynamicResource BorderBrush}" 
                                CornerRadius="4">
                            <Border x:Name="StrengthBar"
                                    HorizontalAlignment="Left" 
                                    Width="0"
                                    Background="#6B7280" 
                                    CornerRadius="4"/>
                        </Border>
                    </StackPanel>

                    <!-- Auto Generate and Show/Hide Buttons -->
                    <StackPanel Orientation="Horizontal">
                        <Button Content="⚡ Auto Generate" 
                                Click="AutoGenerate_Click" 
                                Style="{StaticResource GenerateButton}"
                                Margin="0,0,8,0"/>
                        <Button x:Name="ShowHideButton"
                                Content="👁 Show" 
                                Click="ShowHidePassword_Click" 
                                Style="{StaticResource GenerateButton}"/>
                    </StackPanel>

                    <!-- Info Text -->
                    <TextBlock Text="💡 Password is optional but required for auto-login" 
                               FontSize="11" 
                               Foreground="{DynamicResource SubTextBrush}" 
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Window>