<UserControl x:Class="Execor.Widgets.CustomMessageWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Execor.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10">
        <Grid>
            <TextBlock x:Name="MessageTextBlock"
                       Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="{DynamicResource TextBrush}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Visibility="Visible"/>
            <TextBox x:Name="MessageTextBox"
                     Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="{DynamicResource TextBrush}"
                     FontSize="14"
                     TextWrapping="Wrap"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Visibility="Collapsed"
                     LostFocus="MessageTextBox_LostFocus"
                     KeyDown="MessageTextBox_KeyDown"/>
        </Grid>
    </Border>
</UserControl>
