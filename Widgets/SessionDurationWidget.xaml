<UserControl x:Class="Execor.Widgets.SessionDurationWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Execor.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="180"
             Unloaded="UserControl_Unloaded"> <!-- Added Unloaded event handler -->
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Session Duration"
                       Foreground="{DynamicResource SubTextBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center" />
            <TextBlock x:Name="DurationTextBlock"
                       Text="00:00:00"
                       Foreground="{DynamicResource PrimaryBrush}"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0" />
        </StackPanel>
    </Border>
</UserControl>
