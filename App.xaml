<Application x:Class="LauncherLoader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LauncherLoader"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Color x:Key="PrimaryColor">#3B82F6</Color>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>

        <Color x:Key="SecondaryColor">#EC4899</Color>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>

        <Color x:Key="BackgroundColor">#18181B</Color>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>

        <Color x:Key="SurfaceColor">#27272A</Color>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>

        <Color x:Key="BorderColor">#3F3F46</Color>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <Color x:Key="TextColor">#FFFFFF</Color>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

        <Color x:Key="SubTextColor">#A1A1AA</Color>
        <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource SubTextColor}"/>
    </Application.Resources>
</Application>
