<Window x:Class="HackHelper.SaleTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Sale Tracker"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!--========  GLOBAL FONT  ========-->
        <Style TargetType="TextElement">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"/>
        </Style>
        <!--================================-->

        <!-- Scrollbar Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border CornerRadius="6" Margin="2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" SpreadMethod="Repeat">
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <TranslateTransform Y="0"/>
                                            <RotateTransform Angle="-15" CenterX="0.5" CenterY="0.5"/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                          BlurRadius="8"
                                          ShadowDepth="0"
                                          Opacity="0.6"/>
                            </Border.Effect>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.RelativeTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)"
                                                From="0" To="1" Duration="0:0:1.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Margin="2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Buttons -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       VerticalAlignment="Center">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" SpreadMethod="Repeat">
                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                        <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <TranslateTransform X="0"/>
                                                <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.6"/>
                                </TextBlock.Effect>
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="(TextBlock.Foreground).(LinearGradientBrush.RelativeTransform).(TransformGroup.Children)[0].X"
                                                    From="0" To="1" Duration="0:0:1.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                            </TextBlock>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sale Item Template -->
        <DataTemplate x:Key="SaleItemTemplate">
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderThickness="0"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,10"
                    Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Game Info -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding GameName}"
                                   FontSize="16"
                                   FontWeight="SemiBold">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" SpreadMethod="Repeat">
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                    <LinearGradientBrush.RelativeTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="0"/>
                                            <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                        </TransformGroup>
                                    </LinearGradientBrush.RelativeTransform>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                          BlurRadius="10"
                                          ShadowDepth="0"
                                          Opacity="0.6"/>
                            </TextBlock.Effect>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(LinearGradientBrush.RelativeTransform).(TransformGroup.Children)[0].X"
                                                From="0" To="1" Duration="0:0:1.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="💰 "
                                       FontSize="12"
                                       Foreground="{DynamicResource SubTextBrush}"/>
                            <TextBlock Text="{Binding CurrentPrice}"
                                       FontSize="12"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding OriginalPrice}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SubTextBrush}"
                                       TextDecorations="Strikethrough"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding DiscountPercentage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock Text="{Binding SaleEndDate}"
                                   FontSize="11"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Action Button -->
                    <Button Grid.Column="1"
                            Content="🛒"
                            Width="40"
                            Height="40"
                            Style="{StaticResource ActionButton}"
                            Margin="10,0,0,0"
                            Padding="8"
                            Click="ViewOnSteam_Click"
                            Tag="{Binding}"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#0F0F12"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock x:Name="TitleTextBlock"
                               Text="🏷️ STEAM SALE TRACKER"
                               FontFamily="pack://application:,,,/Resources/EurostileBold.ttf#Eurostile Bold"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0">
                        <TextBlock.Foreground>
                            <LinearGradientBrush x:Name="TitleGradient"
                                                 StartPoint="0,0"
                                                 EndPoint="1,0"
                                                 SpreadMethod="Repeat">
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="GradientTranslate" X="0"/>
                                        <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <TextBlock.Effect>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.8"/>
                        </TextBlock.Effect>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="GradientTranslate"
                                            Storyboard.TargetProperty="X"
                                            From="0" To="1" Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0">
                        <Button Style="{StaticResource WindowButton}" Click="MinimizeButton_Click">
                            <TextBlock Text="━" FontSize="16" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                        </Button>
                        <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                            <TextBlock Text="🗙" FontSize="16" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="500"/>
                    <ColumnDefinition Width="1*" MinWidth="250"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Sales List -->
                <Grid Grid.Column="0" Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter Bar -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="6"
                            Margin="0,0,0,10"
                            Padding="10,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchBox"
                                     Grid.Column="0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextBrush}"
                                     FontSize="13"
                                     VerticalAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Search games on sale..."
                                                                           Foreground="{DynamicResource SubTextBrush}"
                                                                           FontSize="13"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Grid.Column="1"
                                       Text="🔍"
                                       FontSize="16"
                                       Foreground="{DynamicResource SubTextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Sales List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock x:Name="StatusText"
                                       Text="Click 'Refresh Sales' to load current Steam sales"
                                       FontSize="13"
                                       Foreground="{DynamicResource SubTextBrush}"
                                       TextAlignment="Center"
                                       Margin="0,50,0,0"
                                       TextWrapping="Wrap"/>
                            <ItemsControl x:Name="SalesListBox"
                                          ItemTemplate="{StaticResource SaleItemTemplate}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Right Side - Actions and Filters -->
                <Border Grid.Column="1"
                        Background="#1C1C1F"
                        CornerRadius="0,0,12,0"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Steam Account"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,0,0,15"/>

                        <Button x:Name="SteamLoginButton"
                                Content="🎮 Login with Steam"
                                Style="{StaticResource ActionButton}"
                                Click="SteamLogin_Click"/>

                        <TextBlock x:Name="SteamUserText"
                                   Text="Not logged in"
                                   FontSize="11"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="Actions"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,20,0,15"/>

                        <Button Content="🔄 Refresh Sales"
                                Style="{StaticResource ActionButton}"
                                Click="RefreshSales_Click"/>

                        <Button Content="🌟 Wishlist Only"
                                x:Name="WishlistFilterButton"
                                Style="{StaticResource ActionButton}"
                                Click="ToggleWishlistFilter_Click"/>

                        <TextBlock Text="Sort By"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,20,0,15"/>

                        <Button Content="📉 Discount %"
                                Style="{StaticResource ActionButton}"
                                Click="SortByDiscount_Click"/>

                        <Button Content="👇 Price (Low-High)"
                                Style="{StaticResource ActionButton}"
                                Click="SortByPrice_Click"/>

                        <Button Content="🕒 Ending Soon"
                                Style="{StaticResource ActionButton}"
                                Click="SortByEndDate_Click"/>

                        <TextBlock Text="Statistics"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,20,0,15"/>

                        <Border Background="{DynamicResource SurfaceBrush}"
                                CornerRadius="6"
                                Padding="12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="🎮 Games: "
                                               FontSize="12"
                                               Foreground="{DynamicResource SubTextBrush}"/>
                                    <TextBlock x:Name="TotalGamesText"
                                               Text="0"
                                               FontSize="12"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="💰 Avg Discount: "
                                               FontSize="12"
                                               Foreground="{DynamicResource SubTextBrush}"/>
                                    <TextBlock x:Name="AvgDiscountText"
                                               Text="0%"
                                               FontSize="12"
                                               Foreground="{DynamicResource SecondaryBrush}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏆 Best Deal: "
                                               FontSize="12"
                                               Foreground="{DynamicResource SubTextBrush}"/>
                                    <TextBlock x:Name="BestDealText"
                                               Text="N/A"
                                               FontSize="12"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>