                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <TextBlock Grid.Column="1"
                                                   Text="🔍"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource SubTextBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="5,0,0,0"/>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0,10,10">
                                    <ItemsControl x:Name="SteamAccountsListBox" ItemTemplate="{StaticResource SteamAccountItemTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>

                <!-- Right Side - Action Buttons -->
                <Border Grid.Column="1"
                        Background="#1C1C1F"
                        CornerRadius="0,0,12,0"
                        Margin="0,0,0,0"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Import"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,0,0,15"/>
                        <Button Content="➕ Add Loader"
                                Style="{StaticResource SidebarButton}"
                                Click="AddLauncher_Click"/>
                        <Button Content="🔑 Add Password"
                                Style="{StaticResource SidebarButton}"
                                Click="AddPassword_Click"/>
                        <Button Content="🎮 Add Account"
                                Style="{StaticResource SidebarButton}"
                                Click="AddSteamAccount_Click"/>

                        <Button x:Name="EditButton"
                                Content="✏️ Edit"
                                Style="{StaticResource SidebarButton}"
                                Click="Edit_Click"
                                IsEnabled="False"/>
                        <!-- GENERIC PIN BUTTON -->
                        <Button x:Name="PinLoaderButton"
                                Content="📌 Pin"
                                Style="{StaticResource SidebarButton}"
                                Click="PinItem_Click"
                                IsEnabled="False"/>

                        <TextBlock Text="Misc"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,20,0,15"/>

                        <Button Content="⚙️ Settings"
                                Style="{StaticResource SidebarButton}"
                                Click="Settings_Click"/>
                        <Button Content="📊 Statistics"
                                Style="{StaticResource SidebarButton}"
                                Click="Statistics_Click"/>
                        <Button Content="🎨 Theme Editor"
                                Style="{StaticResource SidebarButton}"
                                Click="ThemeEditor_Click"/>
                        <Button x:Name="DiscordRPCButton"
        Background="{DynamicResource SurfaceBrush}"
        Foreground="{DynamicResource TextBrush}"
        BorderThickness="0"
        Padding="15,10"
        Cursor="Hand"
        FontWeight="SemiBold"
        HorizontalContentAlignment="Left"
        Margin="0,0,0,8"
        Click="RPCWindow_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" Margin="2,0,0,0">
                                            <!-- Gradient Border around indicator -->
                                            <Border Width="14" 
                            Height="14" 
                            CornerRadius="7" 
                            BorderThickness="2"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center">
                                                <Border.BorderBrush>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" SpreadMethod="Repeat">
                                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                                        <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <TransformGroup>
                                                                <TranslateTransform X="0"/>
                                                                <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                                            </TransformGroup>
                                                        </LinearGradientBrush.RelativeTransform>
                                                    </LinearGradientBrush>
                                                </Border.BorderBrush>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="8"
                                              ShadowDepth="0"
                                              Opacity="0.6"/>
                                                </Border.Effect>
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation
                                            Storyboard.TargetProperty="(Border.BorderBrush).(LinearGradientBrush.RelativeTransform).(TransformGroup.Children)[0].X"
                                            From="0"
                                            To="1"
                                            Duration="0:0:1.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>

                                                <!-- Indicator -->
                                                <Ellipse x:Name="RPCStatusIndicator" 
                                 Width="10" 
                                 Height="10" 
                                 Fill="#808080"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"/>
                                            </Border>

                                            <!-- Text -->
                                            <TextBlock Text="Discord RPC" 
                               FontWeight="{TemplateBinding FontWeight}"
                               VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" SpreadMethod="Repeat">
                                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                                        <GradientStop Color="{DynamicResource PrimaryColor}" Offset="1.0"/>
                                                        <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.3"/>
                                                        <LinearGradientBrush.RelativeTransform>
                                                            <TransformGroup>
                                                                <TranslateTransform X="0"/>
                                                                <RotateTransform Angle="-40" CenterX="0.5" CenterY="0.5"/>
                                                            </TransformGroup>
                                                        </LinearGradientBrush.RelativeTransform>
                                                    </LinearGradientBrush>
                                                </TextBlock.Foreground>
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                              BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.6"/>
                                                </TextBlock.Effect>
                                                <TextBlock.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation
                                            Storyboard.TargetProperty="(TextBlock.Foreground).(LinearGradientBrush.RelativeTransform).(TransformGroup.Children)[0].X"
                                            From="0"
                                            To="1"
                                            Duration="0:0:1.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </TextBlock.Triggers>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Custom Resize Grip -->
            <Thumb x:Name="CustomResizeGrip"
                Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="16"
                Height="16"
                Cursor="SizeNWSE"
                Margin="0,0,8,8"
                DragDelta="CustomResizeGrip_DragDelta">
                <Thumb.Template>
                    <ControlTemplate>
                        <Border Width="16"
                            Height="16"
                            CornerRadius="4"
                            Padding="3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1"
                                         SpreadMethod="Repeat">
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="0.0" x:Name="Stop1"/>
                                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0.5" x:Name="Stop2"/>
                                    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="1.0" x:Name="Stop3"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Border.Effect>
                                <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                      BlurRadius="6"
                                      ShadowDepth="0"
                                      Opacity="0.8"/>
                            </Border.Effect>
                        </Border>

                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <!-- Animate the offsets to simulate motion diagonally -->
                                        <DoubleAnimation Storyboard.TargetName="Stop1"
                                             Storyboard.TargetProperty="Offset"
                                             From="0" To="1"
                                             Duration="0:0:1.2"
                                             AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Stop2"
                                             Storyboard.TargetProperty="Offset"
                                             From="0.5" To="1.5"
                                             Duration="0:0:1.2"
                                             AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetName="Stop3"
                                             Storyboard.TargetProperty="Offset"
                                             From="1" To="2"
                                             Duration="0:0:1.2"
                                             AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Grid>
    </Border>
</Window>